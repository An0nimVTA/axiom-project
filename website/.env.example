# Environment Configuration for AXIOM Website

# Server Configuration
PORT=3001
HOST=0.0.0.0

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_WS_URL=ws://localhost:3001

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/axiom_website
DB_CONNECTION_POOL_SIZE=10

# Authentication
REACT_APP_JWT_SECRET=your_jwt_secret_here
REACT_APP_ADMIN_PASSWORD=your_admin_password_here

# Security
REACT_APP_RATE_LIMIT_WINDOW_MS=15000
REACT_APP_RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
REACT_APP_ENABLE_REALTIME_DASHBOARD=true
REACT_APP_ENABLE_MOD_INTEGRATION_UI=true
REACT_APP_ENABLE_ECONOMIC_CHARTS=true
REACT_APP_ENABLE_TERRITORY_VISUALIZATION=true
REACT_APP_ENABLE_DIPLOMACY_TOOLS=true
REACT_APP_ENABLE_STATISTICS_EXPORT=true

# Minecraft Server Integration
REACT_APP_MINECRAFT_SERVER_IP=localhost
REACT_APP_MINECRAFT_SERVER_PORT=25565
REACT_APP_PLUGIN_API_PORT=3000